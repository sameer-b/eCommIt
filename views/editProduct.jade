doctype html
html(lang="en")
    head
        include ./head.jade
        title Edit Product - eCommIt
body
    .container
        include ./nav.jade
        form.form-signin(action='/updateProduct/#{data.productID}', method='POST', enctype="multipart/form-data")
            h2.form-signin-heading Add new product
            input.input-block-level(type='text', name = 'productName', placeholder='Product Name' value='#{data.productName}')
            input.input-block-level(type='text', name = 'productPrice', placeholder='Price' value='#{data.productPrice}')
            textarea.input-block-level(type='text', rows = '5' name = 'productDescription', placeholder='Description' ) #{data.productDescription}
            textarea.input-block-level(type='text' rows = '4' name = 'productSummary' , placeholder = 'Product Summary') #{data.productSummary}
            input.input-block-level.col-md-4(type='file', name='image1')
            br
            button.btn.btn-small.btn-primary.imageButton(type='button') Add more images
            h4.form-signin-heading.specHead Product Specifications
            - var i = 0
            each val,spec in data.specs
                - i++
                input(class='col-md-4-offset-1' type='text', name = 'spec#{i}', value='#{spec}')
                input(class='col-md-4-offset-1' type='text', name = 'value#{i}', value='#{val}')
                br
            button.btn.btn-small.btn-primary.specButton(type='button') Add more specs
            br
            input.btn.btn-default.btn-primary(type='submit')

